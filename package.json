{
  "main": "./dist/src/app.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/src/app.js",
    "dev": "node -r ts-node/register ./src/app.ts",
    "dev:watch": "nodemon",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "prettier": "^2.8.7",
    "routing-controllers": "^0.10.2",
    "ts-node": "^10.9.1"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "tests"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run dev",
    "ext": "ts"
  }
}
